doctype html
html(data-ng-app='mainApp')
  head
    title= title
    link(rel='stylesheet', href='/lib/pure/pure.css')
    link(rel='stylesheet', href='/lib/fontawesome/css/font-awesome.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body(data-ng-controller='applicationController',
       data-arrow-key,
       data-left='emitKeyEvent("left-key")',
       data-right='emitKeyEvent("right-key")',
       tabindex='0')
    block content
    script(src='/lib/angular/angular.js')
    script(src='/lib/angular-resource/angular-resource.js')
    script(src='/lib/angular-route/angular-route.js')
    script(src='/lib/angular-sanitize/angular-sanitize.js')

    script(src='/javascripts/App.js')
    script(src='/javascripts/ApplicationController.js')
    script(src='/javascripts/ArrowKeyDirective.js')
    script(src='/javascripts/EditController.js')
    script(src='/javascripts/SlideController.js')
    script(src='/javascripts/Slide.js')