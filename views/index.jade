extends layout

block content
  main
    article.pure-g
      .pure-u-2-3
        h1(data-ng-bind='currentSlide.title')
        section(data-ng-bind-html='currentSlide.contents')
      .pure-u-1-3(data-ng-if='currentSlide.image')
        img(data-ng-src='{{currentSlide.image}}')
    button.pure-button.fa.fa-caret-left(
        data-ng-click='previousSlide()',
        data-ng-show='slideIndex > 0')
    button.pure-button.pull-right.fa.fa-caret-right(
        data-ng-click='nextSlide()',
        data-ng-hide='slideIndex == allSlides.length - 1')